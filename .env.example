# SWE-bench with Claude Code Integration - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==========================================
# API Keys and Authentication
# ==========================================

# Anthropic API Key (required for both standard Anthropic API and Claude Code)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# Claude Code Configuration
# ==========================================

# Maximum tokens for Claude Code responses
CLAUDE_CODE_MAX_TOKENS=8192

# Default Claude Code model
CLAUDE_CODE_MODEL=claude-3.5-sonnet

# Request timeout in seconds
CLAUDE_CODE_TIMEOUT=300

# Temperature for text generation (0.0 to 1.0)
CLAUDE_CODE_TEMPERATURE=0.1

# Maximum number of instances to process (for testing)
CLAUDE_CODE_MAX_INSTANCES=

# ==========================================
# Docker Configuration
# ==========================================

# Enable Docker BuildKit for better performance
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Docker namespace for SWE-bench images
DOCKER_NAMESPACE=swebench

# ==========================================
# Evaluation Configuration
# ==========================================

# Maximum number of parallel workers
MAX_WORKERS=4

# Cache level for Docker images (none, base, env, instance)
CACHE_LEVEL=env

# Clean up Docker containers after evaluation
CLEAN_CONTAINERS=true

# ==========================================
# Logging Configuration
# ==========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed logging for debugging
DEBUG_MODE=false

# ==========================================
# Performance and Resource Limits
# ==========================================

# Maximum memory per Docker container (in GB)
MAX_MEMORY=8

# Maximum CPU cores per container
MAX_CPUS=2

# Disk space threshold for cleanup (in GB)
DISK_CLEANUP_THRESHOLD=10

# ==========================================
# Cloud Integration (Optional)
# ==========================================

# Modal configuration (for cloud evaluation)
MODAL_TOKEN=

# AWS credentials (for sb-cli)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ==========================================
# Development and Testing
# ==========================================

# Enable test mode (limits dataset size)
TEST_MODE=false

# Test dataset size limit
TEST_DATASET_LIMIT=10

# Skip Docker builds in test mode
SKIP_DOCKER_BUILDS=false